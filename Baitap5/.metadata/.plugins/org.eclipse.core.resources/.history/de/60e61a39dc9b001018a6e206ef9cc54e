package com.littlelotus.media.dto.forms;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.NotBlank;
import lombok.Data;

/**
 * Form đăng ký dùng cho Thymeleaf @ModelAttribute
 * Bổ sung displayName và avatarUrl (trước đó thiếu => lỗi getDisplayName/getAvatarUrl)
 */
@Data
public class RegisterForm {
    @NotBlank
    private String username;

    @NotBlank
    @Email
    private String email;

    @NotBlank
    private String password;

    // Hiển thị tên (có thể null, sẽ fallback ở entity nếu cần)
    private String displayName;

    // URL avatar (có thể null)
    private String avatarUrl;
}
