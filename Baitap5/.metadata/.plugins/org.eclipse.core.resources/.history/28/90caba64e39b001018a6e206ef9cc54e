    <div class="post-list">
        <div th:each="post : ${posts}" class="post-card">
            <h3 th:text="${post.user.displayName}">Username</h3>
            <p th:text="${post.caption}">Post caption</p>
            <img th:if="${post.imageUrl}" th:src="@{${post.imageUrl}}" alt="Post image" class="post-image">

            <div class="comments">
                <h4>Comments:</h4>
                <div th:each="comment : ${post.comments}">
                    <strong th:text="${comment.user.displayName}">Commenter</strong>: 
                    <span th:text="${comment.content}">Comment text</span>
                </div>
            </div>

            <form th:action="@{'/posts/' + ${post.id} + '/comment'}" method="post">
                <input type="text" name="content" placeholder="Add a comment" required>
                <button type="submit">Comment</button>
            </form>
        </div>
    </div>

    <footer th:replace="fragments/footer :: footer"></footer>
